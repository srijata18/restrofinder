<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="3dp">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="8dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp"
        app:cardBackgroundColor="@android:color/white"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <ImageView
                android:id="@+id/iv_restro"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_person"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_restro_name"/>
            <TextView
                android:id="@+id/tv_restro_name"
                android:lines="2"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_restro"
                android:textSize="12dp"
                android:text="restro name"
                app:layout_constraintBottom_toTopOf="@+id/tv_restro_country"/>
            <TextView
                android:id="@+id/tv_restro_loc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:lines="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/rate"
                app:layout_constraintTop_toBottomOf="@+id/tv_restro_name"
                app:layout_constraintTop_toTopOf="@id/rate"
                app:layout_constraintBottom_toTopOf="@id/tv_restro_country"/>
            <TextView
                android:id="@+id/tv_restro_country"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/rate"
                app:layout_constraintTop_toBottomOf="@+id/tv_restro_loc"
                app:layout_constraintBottom_toBottomOf="@id/rate"/>

            <ImageView
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/thumbs_down"
                app:layout_constraintStart_toEndOf="@+id/tv_restro_country"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_restro_name"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_rate_review"/>
            <ImageView
                android:id="@+id/thumbs_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/rate"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@id/rate"
                android:src="@drawable/ic_thumb_down"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>